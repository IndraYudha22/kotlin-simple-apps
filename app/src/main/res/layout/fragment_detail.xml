<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.detail.DetailFragment">

    <data>
        <variable
            name="githubuser"
            type="com.strivere.githubuser.data.GithubUser" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@drawable/flip_rounded">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    app:text="@{githubuser.name}"
                    android:id="@+id/rv_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_name"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBackground"
                    android:layout_marginBottom="16dp"/>
                <TextView
                    app:text="@{githubuser.username}"
                    android:id="@+id/rv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_username"
                    android:textSize="16sp"
                    android:textColor="@color/colorBackground"/>
            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                app:image="@{githubuser.avatar}"
                android:id="@+id/img_detail"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="16dp"
                tools:src="@tools:sample/avatars"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout1"
            android:orientation="vertical"
            android:background="@color/colorBackground">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/colorBackground"
                android:layout_width="360dp"
                android:layout_height="120dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:id="@+id/rl_repo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/img_repo"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/repo"
                                android:scaleType="fitXY"
                                android:layout_gravity="center"/>
                            <TextView
                                app:text="@{Integer.toString(githubuser.repository)}"
                                android:id="@+id/tv_repo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/repo_text"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="30sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/repository"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/img_followers"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/followers"
                                android:scaleType="fitXY"
                                android:layout_gravity="center"/>
                            <TextView
                                app:text="@{Integer.toString(githubuser.follower)}"
                                android:id="@+id/tv_followers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/followers_text"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="30sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/followers"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/img_following"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/following"
                                android:scaleType="fitXY"
                                android:layout_gravity="center"/>
                            <TextView
                                app:text="@{Integer.toString(githubuser.following)}"
                                android:id="@+id/tv_following"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/following_text"
                                android:layout_gravity="center"
                                android:layout_marginStart="5dp"
                                android:textColor="@color/colorPrimary"
                                android:textStyle="bold"
                                android:textSize="30sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/following"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/company"/>
                <TextView
                    app:text="@{githubuser.company}"
                    android:id="@+id/tv_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/company"
                    android:layout_marginStart="16dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/location"/>
                <TextView
                    app:text="@{githubuser.location}"
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/location"
                    android:layout_marginStart="16dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>